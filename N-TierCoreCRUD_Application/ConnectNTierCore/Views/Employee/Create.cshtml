@model CommonLayer.Employee

@{
    ViewData["Title"] = "Create";
}

<!-- Page Header -->
@* <h1 class="bg-dark text-white text-center rounded">Insert Employee</h1> *@
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <!-- Adjust the column size as needed -->
            <div>               
                <h1 class="bg-dark text-white text-center rounded p-3">Insert Employee</h1>               
            </div>           
        </div>
    </div>
</div>

<div class="container mt-3">
    <!-- Reduced top margin -->
    <div class="row justify-content-center mt-3">
        <div class="col-11 col-sm-10 col-md-8 col-lg-6">
            <div class="bg-light p-3 rounded border border-primary">
                <!-- Adjusted padding -->
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div> <!-- Reduced margin below summary -->

                    <div class="form-group mb-2">
                        <!-- Reduced margin below each input -->
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <!-- Reduced margin below each input -->
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <!-- Reduced margin below each input -->
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <!-- Reduced margin below each input -->
                        <label asp-for="Post" class="control-label"></label>
                        <input asp-for="Post" class="form-control" />
                        <span asp-validation-for="Post" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <!-- Reduced margin below each input -->
                        <label asp-for="Salary" class="control-label"></label>
                        <input asp-for="Salary" class="form-control" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-center">
                        <input type="submit" value="Create" class="btn btn-primary me-2" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
