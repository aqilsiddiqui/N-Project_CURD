@model IEnumerable<CommonLayer.Employee>

<!-- Page Header -->
<h1 class="bg-dark text-white text-center rounded">SHOW ALL EMPLOYEES</h1>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<!-- Display any TempData messages -->
@Html.Raw(TempData["insert"])
@Html.Raw(TempData["update"])
@Html.Raw(TempData["delete"])

<!-- Button to add a new employee -->
<a asp-action="Create" asp-controller="Employee" class="btn btn-success">Add Employee</a>

<!-- Responsive table with Bootstrap classes -->
<div class="table-responsive mt-3">
    <table class="table table-bordered border border-success rounded bg-light text-center">
        <thead>
            <tr class="bg-info">
                <!-- Table headers with centered text -->
                <th>EID</th>
                <th>NAME</th>
                <th>AGE</th>
                <th>ADDRESS</th>
                <th>POST</th>
                <th>SALARY</th>
                <th colspan="3">ACTION</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through employees and display each record in a table row -->
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Eid</td>
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@emp.Address</td>
                    <td>@emp.Post</td>
                    <td>@emp.Salary</td>

                    <!-- Edit icon button (small pencil icon) -->
                    <td>
                        <a asp-action="Edit" asp-controller="Employee" class="btn btn-warning" asp-route-id="@emp.Eid" title="Edit">
                           @*  <i class="fas fa-pencil-alt fa-sm"></i>  *@<!-- Small pencil icon for Edit -->
                            <i class="fa-solid fa-user-pen"></i>
                        </a>
                    </td>

                    <!-- Delete icon button (small trash icon) -->
                    <td>
                        <a asp-action="Delete" asp-controller="Employee" class="btn btn-danger" asp-route-id="@emp.Eid" title="Delete" onclick="return confirm('Are you sure you want to delete (Y/N)?');">
                           @*  <i class="fas fa-trash fa-sm"></i> *@ <!-- Small trash icon for Delete -->
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </td>

                    <!-- Details icon button (small eye icon) -->
                    <td>
                        <a asp-action="Details" asp-controller="Employee" class="btn btn-dark" asp-route-id="@emp.Eid" title="View Details">
                            @* <i class="fas fa-eye fa-sm"></i> *@ <!-- Small eye icon for Details -->
                            <i class="fa-solid fa-circle-info"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
